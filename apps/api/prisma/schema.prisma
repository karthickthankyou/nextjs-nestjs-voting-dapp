// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Personality {
    id        Int    @id @default(autoincrement())
    name      String @unique
    upvotes   Int
    downvotes Int
    creator   String
    votes     Vote[]
}

model Vote {
    id            Int          @id @default(autoincrement())
    name          String
    vote          Int
    voter         String
    personality   Personality? @relation(fields: [personalityId], references: [id])
    personalityId Int?

    @@unique([name, voter])
}
